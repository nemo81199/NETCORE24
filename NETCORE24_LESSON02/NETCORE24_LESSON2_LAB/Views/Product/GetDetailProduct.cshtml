@{
}
<h1>Chi tiết sản phẩm</h1>

<div class="row">
    <div class="col-md-4">
         <img src="@Url.Content(@ViewBag.cate.Images)" alt="" width="100%" height="100%"/>
    </div>
    <div class="col-md-8">
        <p><b>Sản phẩm: @ViewBag.cate.Name</b></p>
        <p><b><s>Giá gốc: @ViewBag.cate.Price </s> Giá mới: @ViewBag.cate.SalePrice</b></p>
        <p><b>Mô tả:</b></p>
        <p>@ViewBag.cate.Description</p>
        <p><b>Trạng thái: 
            @if (@ViewBag.cate.Status == "1")
            {
                    <span>Còn hàng</span>
                }
                else
                {
                     <span>Hết hàng</span>
                }
            </b></p>
        <p><b>Ngày đăng: @ViewBag.cate.CreatedAt</b></p>
        <p>
            <a asp-controller = "Product" asp-action="Index" class="btn btn-sm btn-danger">Về danh sách</a>
        </p>
    </div>

</div>