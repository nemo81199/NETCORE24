@{
     ViewData["Title"] = "Product";
    var list = ViewData["list"] as List<Category>;
}
    <head>
        <link rel = "stylesheet" href="css/Product.css"/>
    </head>
<body>
    <div class="row">
        <div class="col-md-4"> 
            <h2>Danh mục</h2>
            <ul>
                <li><a class="active" href="#home">Quần áo</a></li>
                <li><a href="#news">Túi xách</a></li>
                <li><a href="#contact">Đồng hồ</a></li>
                <li><a href="#about">Quạt điện</a></li>
            </ul>
        </div>
        <div class="col-md-8">
            <h2>Danh mục sản phẩm</h2>
            <div class ="row">
                @foreach (var item in list)
                {
                    <div class="col-md-4"> 
                        <div class="thumbnail">   
                            <img src="@Url.Content(item.Images)" alt="" width="80%" height="50%"/>
                             <h5>@item.Name</h5>
                             <p><s>Giá @item.Price</s> Giá @item.SalePrice</p>
                             <p>
                                 <a asp-route = "detailProduct" asp-route-id = "@item.Id" class="btn btn-success btn-blocck">Chi tiet</a>
                             </p>
                        </div>

                    </div>
                }
        </div>
        </div>
        
    </div>
    

</body>
